@using TravelTripProje.Models.Sınıflar
@model List<Blog>
<div class="con-bot">
    @{int a = 0;}
    @foreach (var x in Model)
    {
        a++;
        var ss = "left";

        if (a == 3)
        {
            ss = "right";
        }
        <div class="@ss">

            <div class="bot-left">
                <img src="@x.BlogImage" style="height:200px;  " alt="" />
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                

            <p>
                @if (@x.Aciklama.Length > 100)
                {@x.Aciklama.Substring(0, 100)}
            else
            {@x.Aciklama}...
                        </p>

                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
                <span class="doller" style="font-size:15px">@x.Tarih.ToString("D")</span>
            </div>
        </div>

    }
    <div class="clear"></div>
</div>
