@using TravelTripProje.Models.Sınıflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Onaylanmamış Yorumlar </h5>
        <div class="table-responsive ">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Kullanıcı</th>
                        <th>Mail</th>
                        <th>Yorum</th>
                        <th>Blog</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                        <th>Onay</th>

                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var x in Model)
                    {

                        if (x.Onay == false)
                        {
                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@x.ID</strong></td>
                        <td>@x.KullaniciAdi</td>
                        <td>@x.Mail</td>
                        <td>@x.Yorum</td>
                        <td><a href="/Blog/BlogDetay/@x.Blogid/">@x.Blog.Baslik</a></td>
                        <td><a href="/Admin/YorumSil/@x.ID" type="button" class="btn rounded-pill btn-danger">Sil</a></td>
                        <td><a href="/Admin/YorumGetir/@x.ID" class="btn rounded-pill btn-primary">Güncelle</a></td>
                        <td><a href="/Admin/YorumOnay/@x.ID" class="btn rounded-pill btn-success">Onay</a></td>
                    </tr>
                        }
                    }
                </tbody>
            </table>

        </div>

    </div>
    </div>
